{% extends 'base.html.twig' %}

{% block title %}Visit Statistics{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Unique Visits Per Page</h4>
        </div>
        <div class="card-body">
            <form method="get" action="{{ path('visits_list') }}" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Domain:</label>
                    <input type="text" name="domain" value="{{ domain }}" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Start Date:</label>
                    <input type="date" name="startDate" value="{{ startDate }}" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date:</label>
                    <input type="date" name="endDate" value="{{ endDate }}" class="form-control">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                <tr>
                    <th>Page URL</th>
                    <th>Unique Visits</th>
                </tr>
                </thead>
                <tbody>
                {% for visit in visits %}
                    <tr>
                        <td><a href="{{ visit.pageUrl }}" target="_blank">{{ visit.pageUrl }}</a></td>
                        <td class="text-center">{{ visit.total_visits }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center">No data available for this period.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
